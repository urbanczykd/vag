<%= link_to "Dodaj artykuł", new_admin_article_path%>
<table>
  <tr>
    <th>#id</th>
    <th>pozycja</th>
    <th>tytuł</th>
    <th>publikacja?</th>
    <th colspan="3">Opcje</th>
  </tr>
  <% @articles.each do |article| %>
  <tr>
    <td>#<%= article.id%></td>
    <td><%= article.position%></td>
    <td><%= article.title%></td>
    <td><%= link_to("#{article.publish?}", article_act_path(article, "#{!article.publish?}")) %></td>
    <td><%= link_to("Up", article_act_path(article, "up"))%> |
        <%= link_to("Down", article_act_path(article, "down"))%></td>
    <td><%= link_to "Pokaż", admin_article_path(article)%></td>
    <td><%= link_to "Edytuj", edit_admin_article_path(article)%></td>
    <td><%= link_to "Usuń", admin_article_path(article), :method => :delete, :confirm => "Na pewno usunąć ten artykuł?"%></td>
  </tr>
  <% end %>
</table>