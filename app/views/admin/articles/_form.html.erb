<%= form_for [:admin, @article] do |f| %>
<br />
  <p>
    <%= f.label :tytuł %>:<br />
    <%= f.text_field :title %><br />
    <%= f.label :tagi %>:<br />
    <%= f.text_field :tag %><br />
    <br />
    <%= f.label :zajawka %>:<br />
    <%= f.text_area :head, :class => "jquery_ckeditor" %><br />
    <%= f.label :treść %>:<br />
    <%= f.text_area :body, :class => "jquery_ckeditor" %><br />
    <%= f.submit %>
  </p>
<% end %>
  <%= form_for([:admin, @image], :html => {:multipart => true}) do |f| %>
    <p>
      <b><i>Image to Article/image</i></b><br />
      <%= f.file_field :photo %>
    </p>
    <p>
      Article id
      <%= f.hidden_field :article_id, :value => params[:id].chomp("-")[0].to_i%><br />
      Opis zdjęcia:<%= f.text_field :name %><br />
    </p>
    <p><%= f.submit "Dodaj zdjęcie"%>
    </p>
  <% end %>
<br />
<p>
  Dostępne rozmiary:<br />
:vsmall = 100x100,<br />
:thumb = 150x150,<br />
:small = 300x300,<br />
:oryginal => "800x600>",<br />
</p>
<% @images.each do |image| %>
<p>
<%= image_tag image.photo.url(:vsmall)%>
<div style="font-size: 10px;"><%= root_url + image.photo.url(:vsmall).sub("/", "")%></div>
</p>
<% end %>
<br /><br /><br /><br /><br /><br /><br />