<%= javascript "jquery.wysiwyg"%>
<%= stylesheet "jquery.wysiwyg"%>

<div class="gallery_box">
  <%= form_for([:admin, @image], :html => {:multipart => true}) do |f| %>
    <p>
      <b><i>Image to Article/image</i></b><br />
      <%= f.file_field :photo %>
    </p>
    <p>
      Article id
      <%= f.text_field :article_id, :value => params[:id].chomp("-")[0].to_i%><br />
      Opis zdjęcia:<%= f.text_field :name %><br />
      <%# f.text_field :position, :value => @images.count+1 %>
    </p>
    <p><%= f.submit "Dodaj zdjęcie"%>
    </p>
  <% end %>
<br />
<% @images.each do |image| %>
<div style="float:left;margin: 4px;">
  <%= image_tag image.photo.url(:vsmall)%>
<div style="font-size: 10px;"><%= root_url + image.photo.url(:vsmall).sub("/", "")%></div>
</div>
<% end %>
</div>


<%= form_for [:admin, @article] do |f| %>
<br />
<p>
<%= f.label :tytuł %>:<br />
<%= f.text_field :title %><br />
<%= f.label :tagi %>:<br />
<%= f.text_field :tag %><br />
<br /><br /><br /><br />
<%= f.label :zajawka, :id => "editor" %>:<br />
<script type="text/javascript">
	$('#editor').de77_wysiwyg();
</script>

<%= f.text_area :head %><br />
<%= f.label :treść %>:<br />
<%= f.text_area :body %><br />
<%= f.submit %>
</p>

<% end %>