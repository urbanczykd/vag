<div class="mainbox">
		<div class="mainbox_top">
			<div class="mainbox_top_left"></div>
			<div class="mainbox_top_center"></div>
			<div class="mainbox_top_right"></div>
		</div>

		<div class="mainbox_left">
			<div class="mainbox_right">
				<div class="mainbox_center">
<%= form_for(@user) do |f| %>
    <%= f.label :username %>:<br />
    <%= f.text_field :username %>
  <p>
    <%= f.label :email %>:<br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :password %>:<br />
    <%= f.text_field :password %>
  </p>
  <p>
    <%= f.label :password_confirmation %>:<br />
    <%= f.text_field :password_confirmation %>
  </p>
    
    <%= f.submit "Register" %>
<% end %>      </div>
			</div>
		</div>

		<div class="mainbox_down">
			<div class="mainbox_down_left"></div>
			<div class="mainbox_down_center"></div>
			<div class="mainbox_down_right"></div>
		</div>
  </div>