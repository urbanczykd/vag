  <div class="mainbox">
		<div class="mainbox_top">
			<div class="mainbox_top_left"></div>
      <div class="mainbox_top_center"><i>Dodaj komentarz:</i></div>
			<div class="mainbox_top_right"></div>
		</div>

		<div class="mainbox_left">
			<div class="mainbox_right">
				<div class="mainbox_center">
          <% @comment = Comment.new %>
        <%= form_for [@article, @comment], :method => :post do |f| %>
        <%= f.hidden_field :article_id, :value => params[:article].chomp("-")[0].to_i%>
        <%= f.hidden_field :user_id, :value => current_user.id%>
          <%= f.label :Komentarz %> :
          <%= f.text_field :body %><br />
          <%= f.submit "Dodaj"%>
          <% end %>
        <div class="read_more"></div>
      </div>
			</div>
		</div>

		<div class="mainbox_down">
			<div class="mainbox_down_left"></div>
			<div class="mainbox_down_center"></div>
			<div class="mainbox_down_right"></div>
		</div>
  </div>  