<%= yield(:head)%>

<%= csrf_meta_tag %>
</head>
<body>
	<div id="frame">
		<div id="baner"></div>
		<div id="vericalmenu">
			<div id="vericalmenu_left"></div>
			<div id="vericalmenu_center">
        <%= link_to 'Strona główna', "/"%> |
        <% if current_user %>
          Zalogowany: <%= current_user.username %>|
        <% end %>
        <%= link_to 'Logout', logout_path %>
      </div>
			<div id="vericalmenu_right"></div>
		</div>
		<div id="under_menu">
			<div id="under_menu_left"></div>
			<div id="under_menu_center"></div>
			<div id="under_menu_right"></div> 
		</div>
		<div id="frame2">
			<div id="frame2_left">
  				<div id="frame2_right">
    				<div id="frame2_center">
              <div id="site-a">
                <%= render "admin/share/nav"%>
              </div>
              <div id="main">
            <!-- main -->
            	<div class="mainbox">
            		<div class="mainbox_top">
            			<div class="mainbox_top_left"></div>
            			<div class="mainbox_top_center"></div>
            			<div class="mainbox_top_right"></div>
            		</div>
            		<div class="mainbox_left">
            			<div class="mainbox_right">
            				<div class="mainbox_center">
                        <%= yield %>
                    </div>
            			</div>
            		</div>
            		<div class="mainbox_down">
            			<div class="mainbox_down_left"></div>
            			<div class="mainbox_down_center"></div>
            			<div class="mainbox_down_right"></div>
            		</div>
            	</div>
            <!-- main! -->
              </div>
              <div id="footer_inside">
              	<%= render "share/footer_inside" %>
              </div>
				</div>
			</div>
		</div>
</div>

		<div id="frame3">
			<div id="frame3_left"></div>
			<div id="frame3_center"></div>
			<div id="frame3_right"></div>
		</div>
<p class="test"><%= flash[:notice] %></p>
	</div>
</body>
</html>

